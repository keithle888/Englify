<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ModuleFragment">

    <ImageButton
        android:id="@+id/fragment_module_vocab_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/module_study_vocab" />

    <ImageButton
        android:id="@+id/fragment_module_conversation_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/module_study_read" />

    <ImageButton
        android:id="@+id/fragment_module_exercise_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:src="@drawable/module_study_exercise" />
</LinearLayout>